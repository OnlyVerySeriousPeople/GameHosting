{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "Node18",
    "target": "ES2024",
    "lib": ["ES2023", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
